OBJS = 	\
	asmdrctv.o 		\
	avltree.o		\
	class.o			\
	codearea.o		\
	die.o			\
	dynstr.o		\
	errors.o		\
	except.o		\
	exprprsr.o		\
	file.o			\
	hist.o			\
	ldinstr.o		\
	listfile.o		\
	memalloc.o		\
	model.o			\
	model_symref.o	\
	modlink.o		\
	objfile.o		\
	options.o		\
	parse.o			\
	prsident.o		\
	prsline.o		\
	safestr.o		\
	scan.o			\
	scan_context.o	\
	scan_struct.o	\
	scan_token.o	\
	srcfile.o		\
	strhash.o		\
	strlist.o		\
	strpool.o		\
	strutil.o		\
	symbols.o		\
	z80asm.o		\
	z80instr.o		\
	z80pass.o		\

ASTYLE = astyle \
	--mode=c \
	--lineend=linux \
	--indent=spaces=4 \
	--style=ansi --add-brackets \
	--indent-switches --indent-classes \
	--indent-preprocessor --convert-tabs \
	--break-blocks \
	--pad-oper --pad-paren-in --pad-header --unpad-paren \
	--align-pointer=name

TARGET =		z80asm$(EXESUFFIX)
MSVC_TARGET =	../../win32/Debug/$(TARGET)

CFLAGS +=		-W

all: $(TARGET) gccmake.bat

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) -o $(TARGET)  $(OBJS)

# flex
scan.c scan.h : scan.l
	flex -L scan.l

install:
	install $(TARGET) $(PREFIX)/bin/

clean :
	$(RM) *.o *.exe *~ *.bak *.orig core $(TARGET) test* t/*.tmp
	$(RM) -rf Debug Release

# test
test : $(TARGET)
	perl -S prove t/*.t

testmsvc : $(MSVC_TARGET)
	make Z80ASM=$(MSVC_TARGET) test

# build with msvc - need to build manualy, devenv not available in Express
$(MSVC_TARGET) : $(wildcard *.c) $(wildcard *.h)
	@echo Build z80asm inside Microsoft Visual C++ 2010 Express
	@exit 1

# formatting style
astyle:
	$(ASTYLE) *.c *.h

# gccmake.bat
gccmake.bat : Makefile
	perl -e "print \
				'@echo off', qq(\n), \
				'rem ', '$$', 'Id', '$$', qq(\n), \
				qq(\n), \
				'echo *******************', qq(\n), \
				'echo * Building z80asm *', qq(\n), \
				'echo *******************', qq(\n), \
				'del *.o', qq(\n); \
			for (@ARGV) { \
				s/\.o$$//; \
				print 'gcc -c -o '; \
				print; \
				print '.o ', ' ' x (20 - length); \
				print; \
				print '.c'; \
				print qq(\n); \
			} \
			print \
				'gcc -o z80asm *.o', qq(\n), \
				'copy z80asm.exe ..\\..\\bin', qq(\n), \
				'del z80asm.exe', qq(\n); \
		" $(OBJS) > gccmake.bat.new
	mv gccmake.bat.new gccmake.bat
	
# Dependencies
depend:
	makedepend -Y -- $(CFLAGS) -- $(OBJS:.o=.c)

